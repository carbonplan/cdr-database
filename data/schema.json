{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Project": {
            "allOf": [
                {
                    "$ref": "https://geojson.org/schema/Feature.json"
                },
                {
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metrics": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Metric"
                            }
                        },
                        "technologies": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Technology"
                            }
                        }
                    },
                    "required": [
                        "name",
                        "tags",
                        "metrics"
                    ]
                }
            ]
        },
        "Technology": {
            "type": "object",
            "required": [
                "name"
            ]
        },
        "Metric": {
            "type": "object",
            "required": [
                "name"
            ]
        }
    }
}
